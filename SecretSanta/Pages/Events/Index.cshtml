@page
@model SecretSanta.Pages.Events.IndexModel
@{
}
<div class="container">
    
    <div class="row">
        
        <div class="col">
            
            <h2>Events</h2>
            <ul>
                @foreach (var item in Model.Events)
                {
                <li>
                    <a asp-route="events_show" asp-route-Id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
                </li>
                }
            </ul>

        </div>

    </div>

</div>